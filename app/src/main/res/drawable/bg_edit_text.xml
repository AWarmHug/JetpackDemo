<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_activated="true" android:state_focused="true" android:state_pressed="true">
        <layer-list>
            <!-- 边框颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/text_dark" />
                </shape>
            </item>
            <item android:bottom="1px"> <!--设置只有底部有边框-->
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item>
        <layer-list>
            <!-- 边框颜色值 -->
            <item>
                <shape>
                    <solid android:color="@color/line" />
                </shape>
            </item>
            <item android:bottom="1px"> <!--设置只有底部有边框-->
                <shape>
                    <solid android:color="@color/white" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>